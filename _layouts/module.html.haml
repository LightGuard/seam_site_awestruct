---
layout: base
---
.block
    .column.span-24
        %img#logo{:src=>"/images/modules/seam_#{page.module_name}_85px.jpg"}
        %br/
        %em #{page.tagline}
.block
    .column.span-16
        ~ content
        .block
            .column.span-24
                %h2 Contributors
                %table
                    %thead
                        %tr
                            %th Picture & Name
                            %th Commit Username
                            %th Company
                            %th Location
                    %tbody
                        -for contributor in page.contributors
                            %tr
                                %td
                                    %img{:src=>"#{preferred_value('avatar_url', contributor['login'], contributor['avatar_url'])}", :width=>"50", :height=>"50"}
                                    %a{:href=>"https://community.jboss.org/people/#{preferred_value('jboss_org', contributor['login'], '')}"}
                                        #{preferred_value('name', contributor['login'], contributor['login'])}
                                %td #{contributor['login']}
                                %td #{preferred_value('company', contributor['login'], '')}
                                %td #{preferred_value('location', contributor['login'], '')}
        .block
            .column.span-24
                %h2 Releases
                %table
                    %thead
                        %tr
                            %th Name
                            %th Released Date
                            %th Description
                    %tbody
                        - for version in page.versions
                            %tr
                                %td #{version['name']}
                                %td #{version['releaseDate']}
                                -#%td= DateTime::strptime("#{version['releaseDate']}", '%FT%T.%L%z')
                                %td #{version['description']}
    .column.span-7.last
        %h3 Downloads
        - page.downloads.each_pair do |key, value|
            %a{:href=>"#{value}"} #{key}
        - done
